---
layout: body
---

<% collection = @getCollection(@document.collection).toJSON() %>
<div class="pure-g">
<% for item in collection : %>
  <div class="pure-u-1 pure-u-sm-1-2 pure-u-md-1-4">
    <article id="<%= item.id %>" class="unvx-article-item">
      <header>
        <h2 class="title"><a href="<%= @getFullURL(item.url) %>"><%= item.title %></a></h2>
      </header>
      <div class="unvx-featured-img">
        <a href="<%= @getFullURL(item.url) %>">
          <img class="b-lazy" src="data:image/png;base64," lazy-src="<%= if item.headerImg? then @getThumbnail("/associated-files/" + item.basename + "/" + item.headerImg) else @getThumbnail("/img/phnormal.png") %>">
        </a>
      </div>
      <footer>
        <span>
          <i class="fa fa-calendar"></i>
          <%= item.human %>
        </span>
        <span>
          <i class="fa fa-user"></i>
          <%= if item.authors.length > 1 then item.authors[0].concat(' y otros') else item.authors[0] %>
        </span>
      </footer>
    </article>
  </div>
<% end %>
</div>
